<div class="page-header"><h1>My Projects</h1></div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% projects.forEach(function (project) { %>
    <tr>
      <td> <h6><%- project.name %></h6>Watchers: <%- project.watchers %>, forks: <%- project.forks %> </td>
      <% if (project.stats) { %>
      <td> <strong>Coverage <%- project.stats.coverage %>%</strong><br/>Classes: <%- project.stats.classes %>, packages: <%- project.stats.packages %>, methods: <%- project.stats.totalMethods %> </td>
      <td> <%- link_to('<i class="icon-refresh icon-white"></i> Update docs', project.path + '/update', {class: 'btn btn-inverse'}) %> </td>
      <% } else { %>
        <td> <span class="label">not generated</span> </td>
        <td> <%- link_to('<i class="icon-plus"></i> Generate docs', project.path, {class: 'btn'}) %> </td>
      <% } %>
    </tr>
  <% }); %>
  </tbody>
</table>
